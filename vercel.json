{
  "version": 2,
  "builds": [
    { "src": "api/messages.js", "use": "@vercel/node" },
    { "src": "api/upload.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/messages", "dest": "/api/messages.js" },
    { "src": "/api/upload", "dest": "/api/upload.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
